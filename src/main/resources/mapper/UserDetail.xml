<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.catwar.repository.interfaces.UserDetailRepository">
	
	<insert id="insertNewNickName"  >
		insert into user_detail_tb (user_id,nick_name)
		values(#{userId}, #{nickName});
	</insert>
	   <select id="selectByUserIdAndDetailId" parameterType="map" resultType="com.catwar.repository.model.UserDetail">
        SELECT *
        FROM user_detail_tb
        WHERE user_id = #{userId}
        AND detail_id = #{detailId}
    </select>
	
</mapper>